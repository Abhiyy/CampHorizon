@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
@model Camphorizon.Web.ViewModels.LoginViewModel
<div class="row">
    <div class="col-md-12  ">
    <div class ="col-md-4 col-md-offset-4 well topMargin" >
     @using(Html.BeginForm("Index","Login",FormMethod.Post, new {@class="form-horizontal"}))
     {
         
  <fieldset>
    <legend>Legend</legend>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-3 control-label">Email</label>
      <div class="col-lg-9">
          @Html.TextBoxFor(m=>m.username, new {@class="form-control",@placeholder="Email"})
        
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-lg-3 control-label">Password</label>
      <div class="col-lg-9">
       
       @Html.PasswordFor(m=>m.password, new {@class="form-control",@placeholder="Password"})
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-9 col-lg-offset-3">
        @*<button type="reset" class="btn btn-default">Cancel</button>*@
        <button type="submit" class="btn btn-primary"><i class="fa fa-lock"></i> Login</button>
      </div>
    </div>
  </fieldset>
}
    </div>
</div>
</div>
